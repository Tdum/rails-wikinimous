<h2><%= @article.title %></h2>
<p><%= @article.content %></p>
<div class="d-flex justify-content-start align-items-center">
  <%= link_to "Edit Article", edit_article_path(@article), class:"p-3" %>
  <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure ?" } do %>
    <i class="fas fa-trash-alt p-3"></i>
  <% end %>
  <%= link_to "Back to collection", articles_path %>
</div>

