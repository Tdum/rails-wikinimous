

<!-- display list of articles -->
<div class="container">
  <% @articles.each do |article| %>
    <article>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <p class="h3 bold text-body"><%= link_to article.title, article_path(article) %></p>
          <p class="text-body"><%= article.content %></p>
        </div>
      </div>
    </article>
  <% end %>
</div>


